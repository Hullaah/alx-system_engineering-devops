#!/usr/bin/env bash
# A script that installs nginx on your server
sudo apt-get update -y
sudo apt-get install -y nginx
sudo ufw allow 'Nginx HTTP'
echo 'Hello World!' | sudo tee /var/www/html/index.html > /dev/null
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null
sudo sed -i "s/server_name _;/server_name _;\n\t location \/redirect_me {return 301 https:\/\/www.youtube.com/watch?v=QH2-TGUlwu4}/" /etc/nginx/sites-available/default
sudo sed -i "s/root /var/www/html;/root /var/www/html;\n\terror_page 404 /404.html;/" /etc/nginx/sites-available/default
sudo service nginx restart
