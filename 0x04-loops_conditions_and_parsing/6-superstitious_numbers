#!/usr/bin/env bash
# Write a Bash script that loops from 1 to 20
i=0
while (( "$i" < 20 )); do
    if (("$i" == 3)); then
        echo "bad luck from China"
    elif (("$i" == 8)); then
        echo "bad luck from Japan"
    elif (("$i" == 16)); then
        echo "bad luck from Italy"
    else
        echo "Best School"
    fi
    i="(($i + 1))"
done
